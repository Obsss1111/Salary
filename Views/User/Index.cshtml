@model IEnumerable<User>
@{
    ViewData["Title"] = "Управление пользователями";
}
<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Добавить пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                @user.Id
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                @user.PhoneNumber
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="text-secondary"><i class="bi bi-pencil-fill"></i></a> |
                <a asp-action="Details" asp-route-id="@user.Id"><i class="bi bi-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@user.Id" class="text-danger"><i class="bi bi-x-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

