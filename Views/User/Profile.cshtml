@model Salary.Models.User
@{
    ViewData["Title"] = "Профиль";
}
<div class="row">
    <div class="col-sm-2 border-dark">
        <i class="bi bi-person-circle"></i>
    </div>
    <div class="col-sm-10">
        <dl class="row">
            <dt class="col-sm-2">
                ФИО
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Employee.FullName
            </dd>
            <dt class="col-sm-2">
                Должность
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Employee.Prof
            </dd>
            <dt class="col-sm-2">
                Дата рождения
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Employee.Birthday
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="btn-group">
        <a href="#" class="btn btn-secondary active">Сформировать отчет</a>
        <a href="#" class="btn btn-secondary">Тех. поддержка</a>
    </div>
</div>


